LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY DISPLAY1 IS
    PORT(H:IN STD_LOGIC_VECTOR(3 DOWNTO 0);L:IN STD_LOGIC_VECTOR(3 DOWNTO 0);
    BCD1:OUT STD_LOGIC_VECTOR(6 DOWNTO 0));BCD2:OUT STD_LOGIC_VECTOR(6 DOWNTO 0));
    END DISPLAY1;
ARCHITECTURE A OF DISPLAY1 IS
    BEGIN
PROCESS(H)
BEGIN
    CASE H IS
    WHEN "0000"=>BCD1<="0111111";
    WHEN "0001"=>BCD1<="0000110";
    WHEN "0010"=>BCD1<="1011011";
    WHEN "0011"=>BCD1<="1001111";
    WHEN "0100"=>BCD1<="1100110";
    WHEN "0101"=>BCD1<="1101101";
    WHEN "0110"=>BCD1<="1111101";
    WHEN "0111"=>BCD1<="0000111";
    WHEN "1000"=>BCD1<="1111111";
    WHEN "1001"=>BCD1<="1101111";
WHEN OTHERS => BCD1 <="0000000";
END CASE;
END PROCESS;
PROCESS(L)
BEGIN
    CASE L IS
    WHEN "0000"=>BCD2<="0111111";
    WHEN "0001"=>BCD2<="0000110";
    WHEN "0010"=>BCD2<="1011011";
    WHEN "0011"=>BCD2<="1001111";
    WHEN "0100"=>BCD2<="1100110";
    WHEN "0101"=>BCD2<="1101101";
    WHEN "0110"=>BCD2<="1111101";
    WHEN "0111"=>BCD2<="0000111";
    WHEN "1000"=>BCD2<="1111111";
    WHEN "1001"=>BCD2<="1101111";
WHEN OTHERS => BCD2 <="0000000";
END CASE;
END PROCESS;
END A;